              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentCreateDto"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized",
