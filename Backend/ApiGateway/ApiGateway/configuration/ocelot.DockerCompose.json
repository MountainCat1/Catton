{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/authentication{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "account_domain",
          "Port": 443
        }
      ],
      "UpstreamPathTemplate": "/api/authentication{everything}",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET"
      ],
      "SwaggerEndpoint": "/swagger/v1/swagger.json",
      "SwaggerKey": "account",
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    
    {
      "DownstreamPathTemplate": "/api/convention/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/convention/{everything}",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET"
      ],
      "SwaggerEndpoint": "/swagger/v1/swagger.json",
      "SwaggerKey": "convention",
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "DownstreamPathTemplate": "/api/convention",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/convention",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET"
      ],
      "SwaggerEndpoint": "/swagger/v1/swagger.json",
      "SwaggerKey": "convention",
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "DownstreamPathTemplate": "/api/tickets",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/api/tickets",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET"
      ],
      "SwaggerEndpoint": "/swagger/v1/swagger.json",
      "SwaggerKey": "tickets",
      "DangerousAcceptAnyServerCertificateValidator": true
    }
  ],
  
  "GlobalConfiguration": {
    "BaseUrl": "https://host.docker.internal:5000",
    "LogLevel": {
      "Default": "Debug"
    },
    "DangerousAcceptAnyServerCertificateValidator": true
  },
  
  "SwaggerEndPoints": [
    {
      "Key": "account",
      "Config": [
        {
          "Name": "Account API",
          "Version": "v1",
          "Url": "https://account_domain:443/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "convention",
      "Config": [
        {
          "Name": "Convention API",
          "Version": "v1",
          "Url": "https://host.docker.internal:5002/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "tickets",
      "Config": [
        {
          "Name": "Tickets API",
          "Version": "v1",
          "Url": "https://host.docker.internal:5002/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
